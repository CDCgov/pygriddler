{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://yourdomain.com/schemas/myschema.json",
    "title": "griddle v0.3",
    "description": "grid of parameters",
    "type": "array",
    "items": {
        "type": "object",
        "oneOf": [
            {
                "$ref": "#/$defs/fix_canonical"
            },
            {
                "$ref": "#/$defs/fix_short"
            }
        ]
    },
    "$defs": {
        "fix_canonical": {
            "description": "fixed variable in canonical form",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "fix"
                    ]
                },
                "value": {}
            },
            "required": [
                "name",
                "type",
                "value"
            ]
        },
        "fix_short": {
            "description": "fixed variable in short form",
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1
        }
    }
}
