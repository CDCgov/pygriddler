{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://yourdomain.com/schemas/myschema.json",
    "title": "griddle v0.3",
    "description": "grid of parameters",
    "type": "array",
    "items": {
        "type": "object",
        "oneOf": [
            {
                "$ref": "#/$defs/fix_canonical"
            },
            {
                "$ref": "#/$defs/fix_short"
            },
            {
                "$ref": "#/$defs/vary"
            },
            {
                "$ref": "#/$defs/vary_short_one"
            }
        ]
    },
    "$defs": {
        "fix_canonical": {
            "description": "fixed variable in canonical form",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "type": {
                    "const": "fix"
                },
                "value": {},
                "if": {
                    "type": "object"
                },
                "comment": {}
            },
            "requiredProperties": [
                "name",
                "type",
                "value"
            ],
            "additionalProperties": false
        },
        "fix_short": {
            "description": "fixed variable in short form",
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "propertyNames": {
                "$ref": "#/$defs/not_a_reserved_word"
            }
        },
        "vary": {
            "description": "grid dimension (all except one parameter in short form)",
            "type": "object",
            "properties": {
                "type": {
                    "const": "vary"
                },
                "values": {
                    "oneOf": [
                        {
                            "description": "verbose form of parameter names and values",
                            "type": "array"
                        },
                        {
                            "description": "short list of parameter names and values",
                            "type": "object",
                            "additionalProperties": {
                                "type": "array"
                            }
                        }
                    ]
                },
                "if": {
                    "type": "object"
                },
                "comment": {}
            },
            "requiredProperties": [
                "type",
                "values"
            ],
            "additionalProperties": false
        },
        "vary_short_one": {
            "description": "grid dimension with one parameter in short form",
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "vary": {
                            "type": "array"
                        }
                    },
                    "requiredProperties": [
                        "vary"
                    ],
                    "additionalProperties": false
                }
            }
        },
        "not_a_reserved_word": {
            "not": {
                "enum": [
                    "name",
                    "type",
                    "vary",
                    "value",
                    "values",
                    "if",
                    "comment"
                ]
            }
        }
    }
}
